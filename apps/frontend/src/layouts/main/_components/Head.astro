---
import { SEO } from "astro-seo";

import type { Frontmatter } from "@lib/types/frontmatter";

import DarkModeScript from "./DarkModeScript.astro";
import "./ExternalLinksScript.astro";
import Favicon from "./Favicon.astro";
import "./VimModeScript.astro";

export interface Props {
  frontmatter: Frontmatter;
}

const { frontmatter } = Astro.props;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <Favicon />
  <SEO
    title={frontmatter.title ? `${frontmatter.title} | Tony Dang` : "Tony Dang"}
    description={frontmatter.description
      ? frontmatter.description
      : "Tony Dang's Blog"}
    noindex={frontmatter.noindex}
    openGraph={{
      basic: {
        title: frontmatter.title ? frontmatter.title : "Tony Dang's Blog",
        type: frontmatter.pubDate ? "article" : "website",
        image: "https://tonydang.blog/og/tony-dang.jpg",
      },
      image: { alt: "Photo of Tony Dang" },
    }}
  />
  <DarkModeScript />
</head>
