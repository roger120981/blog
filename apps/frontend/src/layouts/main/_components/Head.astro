---
import { SEO } from "astro-seo";

import type { Frontmatter } from "@lib/types/frontmatter";

import DarkModeScript from "./DarkModeScript.astro";
import ExternalLinksScript from "./ExternalLinksScript.astro";
import Favicon from "./Favicon.astro";
import VimModeScript from "./VimModeScript.astro";

export interface Props {
  frontmatter: Frontmatter;
}

const { frontmatter } = Astro.props;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <Favicon />
  <SEO
    title={frontmatter.title ? `${frontmatter.title} | Tony Dang` : "Tony Dang"}
    description={frontmatter.description
      ? frontmatter.description
      : "Tony Dang's Blog"}
    noindex={import.meta.env.NO_INDEX ?? frontmatter.noindex}
  />
  <DarkModeScript />
  <ExternalLinksScript />
  <VimModeScript />
</head>
