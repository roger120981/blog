---
import type { CollectionEntry } from "astro:content";

import { SEO } from "astro-seo";

import DarkModeScript from "./DarkModeScript.astro";
import "./ExternalLinksScript.astro";
import Favicon from "./Favicon.astro";

export interface Props {
  entry:
    | CollectionEntry<"pages">
    | CollectionEntry<"posts">
    | CollectionEntry<"projects">;
}

const { entry } = Astro.props;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <Favicon />
  <SEO
    title={entry.data.title === "Tony Dang"
      ? "Tony Dang"
      : `${entry.data.title} | Tony Dang`}
    description={entry.data.description}
    noindex={entry.data.noindex}
    openGraph={{
      basic: {
        title:
          entry.data.title === "Tony Dang"
            ? "Tony Dang's Blog"
            : entry.data.title,
        type: entry.collection === "posts" ? "article" : "website",
        image: entry.data.image
          ? `https://tonydang.blog/og/${entry.slug}.jpg`
          : "https://tonydang.blog/og/tony-dang.jpg",
      },
      optional: {
        description: entry.data.description,
        locale: "en_US",
        siteName: "Tony Dang",
      },
      image: {
        alt: entry.data.image ? entry.data.alt : "Photo of Tony Dang",
        type: "image/jpeg",
        width: 1200,
        height: 630,
      },
    }}
    twitter={{
      card: "summary_large_image",
      site: "@tonydangblog",
      creator: "@tonydangblog",
    }}
  />
  <DarkModeScript />
</head>
