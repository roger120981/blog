{
  "name": "@blog/root",
  "scripts": {
    "clean": "find ./ -name node_modules -type d -exec rm -rf {} +",
    "preinstall": "npx only-allow pnpm",
    "frontend:dev": "pnpm -F @blog/frontend run dev",
    "backend:dev": "pnpm -F @blog/backend run dev",
    "opt-img": "pnpm -F @blog/frontend run opt-img",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "codegen": "playwright codegen",
    "e2e": "playwright test",
    "build": "pnpm -F @blog/frontend run build",
    "preview": "pnpm -F @blog/frontend run preview",
    "deploy": "pnpm -F @blog/frontend run deploy && pnpm -F @blog/backend run deploy"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.7.1",
    "@playwright/test": "^1.34.1",
    "@supabase/supabase-js": "^2.22.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitest/coverage-c8": "^0.31.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-astro": "^0.27.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.9.0",
    "prettier-plugin-glsl": "^0.0.10",
    "prettier-plugin-svelte": "^2.10.0",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.8",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.1",
    "vitest-environment-miniflare": "^2.14.0"
  }
}
