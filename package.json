{
  "name": "@blog/root",
  "scripts": {
    "clean": "find ./ -name node_modules -type d -exec rm -rf {} +",
    "preinstall": "npx only-allow pnpm",
    "frontend:dev": "pnpm -F @blog/frontend run dev",
    "backend:dev": "pnpm -F @blog/backend run dev",
    "opt-img": "pnpm -F @blog/frontend run opt-img",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "codegen": "playwright codegen",
    "e2e": "playwright test",
    "build": "pnpm -F @blog/frontend run build",
    "preview": "pnpm -F @blog/frontend run preview",
    "deploy": "pnpm -F @blog/frontend run deploy && pnpm -F @blog/backend run deploy"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.6.0",
    "@playwright/test": "^1.31.2",
    "@supabase/supabase-js": "^2.10.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitest/coverage-c8": "^0.29.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-astro": "^0.24.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "^2.8.4",
    "prettier-plugin-astro": "^0.8.0",
    "prettier-plugin-glsl": "^0.0.9",
    "prettier-plugin-svelte": "^2.9.0",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vite-tsconfig-paths": "^4.0.5",
    "vitest": "^0.29.2",
    "vitest-environment-miniflare": "^2.12.1"
  }
}
