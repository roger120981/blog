{
  "name": "@blog/root",
  "scripts": {
    "clean": "find ./ -name node_modules -type d -exec rm -rf {} +",
    "preinstall": "npx only-allow pnpm",
    "frontend:dev": "pnpm -F @blog/frontend run dev",
    "backend:dev": "pnpm -F @blog/backend run dev",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "codegen": "playwright codegen",
    "e2e": "playwright test",
    "build": "pnpm -F @blog/frontend run build",
    "preview": "pnpm -F @blog/frontend run preview",
    "deploy": "pnpm -F @blog/frontend run deploy && pnpm -F @blog/backend run deploy"
  },
  "devDependencies": {
    "@playwright/test": "^1.27.1",
    "@supabase/supabase-js": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vitest/coverage-c8": "^0.24.5",
    "dotenv": "^16.0.3",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-astro": "^0.20.1",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.5.5",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "typescript": "^4.8.4",
    "vite": "^3.2.2",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.24.5",
    "vitest-environment-miniflare": "^2.11.0"
  }
}
